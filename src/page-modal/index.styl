.page-modal
  .modal
    display none
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 999
    background rgba(0,0,0,0.4)
    overflow auto
    .modal-content
      position relative
      width 400px
      left 30%
      top 30%
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19)
      animation-name animatetop
      animation-duration 0.4s

      @keyframes animatetop {
        from {
          top 0
          opacity 0
        }
        to {
          top 30%
          opacity 1
        }
      }
        
      .modal-header
        background #b3b3b3
        height 60px
        border-top-left-radius 4px
        border-top-right-radius 4px
        .close
          float right
          color red
          width 60px
          height 60px
          font-size 28px
          font-weight bold
          text-align center
          line-height 60px
          &:hover
            color #000000
            text-decoration none
            cursor pointer
        .modal-title
          padding 16px
      .modal-body
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
        background #fefefe
        padding 16px
  .line
    border-bottom 1px solid black
  .swiper-test 
    margin-top 60px
    overflow hidden
