$basecolor = #6997fe

.bar
  border 1px solid green
  padding 10px
  line-height 0
  background #ffffff
  .axis 
    path 
     stroke #e8e8e8
    line    
      stroke none
  .axisX
    text 
      font-size 14px
      color #000000
      font-weight 400
  .axisY
    text 
      font-size 14px
      color #666666
      font-weight 400
  .tooltip 
    line-height 1.5
    color #ffffff
    font-weight 400
    background-color #000000
    padding .5em
    white-space nowrap
    border-radius 4px
    opacity 0.8
    position absolute
    .dot::before
      content ''
      display inline-block
      margin-right 5px
      border-radius 10px
      width 10px
      height 10px
      background-color $basecolor