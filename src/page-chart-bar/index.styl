$basecolor = #6997fe

.chart
  border 1px solid green
  padding 10px
  line-height 0
  background #ffffff
  .axis 
    path 
     stroke #e8e8e8
    .tick
      line    
        stroke none
  .axisX
    .tick
      text 
        font-size 14px
        color #000000
        font-weight 400
  .axisY
    .tick
      text 
        font-size 14px
        color #666666
        font-weight 400
        padding-right 20px
  .chart-tooltip 
      line-height 1.5
      color #ffffff
      font-weight 400
      background-color #000000
      padding .5em
      // text-shadow #f5f5f5 0 1px 0
      white-space nowrap
      border-radius 4px
      opacity 0.8
      position absolute
    .dot::before
      content ''
      display inline-block
      margin-right 5px
      border-radius 10px
      width 10px
      height 10px
      background-color $basecolor