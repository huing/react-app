.footer-btn
  height 60px
  width calc(100vw - 180px)
  // min-width 1186px
  // margin-left -20px
  padding-right 24px
  display flex 
  flex-direction row
  align-items center
  justify-content flex-end
  box-shadow:0px -6px 5px 0px #ededed
  position fixed
  background #ffffff
  z-index 9
  top calc(100vh - 60px)
  .ant-btn
    min-width 90px
    padding 0 28px
    height 34px

// 链接的按钮样式
.demo-ant-btn-a
  border none
  background transparent
  color #6997fe
  outline none
  text-align center  
  text-decoration none
  cursor pointer
.demo-ant-btn-a[disabled]
  color rgba(0, 0, 0, 0.25)
  cursor not-allowed
  pointer-events none
  outline none
  background transparent

