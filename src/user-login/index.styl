
.user-login
  height 400px
  display flex
  .img
    width 600px
    background rgb(204, 216, 255)
  .ant-form-horizontal
    width 360px 
    margin auto 20px
    .login-form-button 
      width 100%

.page-user
  height 100vh
  background rgb(230, 236, 255)
  display flex
  flex-direction column
  overflow auto
  .section-a
    flex 1
    min-width 1000px
  .section-b
    position relative
    background rgb(153, 175, 255) 
    .footer-bottom
      position absolute
      height 90px
      width 100%
      left 0
      top -90px
      background rgb(153, 175, 255) 
  .section-c
    margin 0 auto
    box-shadow 0 0 20px 0 rgba(42,89,72,1)
    z-index 1
    .section-c-footer
      height 90px
      line-height 90px
      text-align center


