.drag
  position relative
  width 380px 
  height 34px
  line-height 34px
  background-color #e8e8e8
  &::before
    content ''
    display table
  &::after
    content ''
    display table
    clear both
  .box
    padding-left 40px
    height 100%
    position absolute
    background #7AC23C
  .text
    width 100%
    height 100%
    text-align center
    position absolute
    user-select none
    color #4d4d4d
    &.active
      color #ffffff
  .border
    width 40px
    height 34px
    border 1px solid #cccccc
    position absolute
    cursor move
    font-family '宋体'
    font-weight bold
    text-align center
    background #ffffff 
    user-select none
    // box-shadow 2px 0 6px 0 rgba(0, 0, 0, .1)
  .dot-margin
    margin-top 9px
    margin-left 12px


