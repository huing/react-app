$basecolor = #6997fe

.shape
  border 3px solid green
  padding 10px
  line-height 0
  background #ffffff
  position relative
  .slices
    path 
      transition all 0.3s
      &:hover
        transform: scale(1.05)
        transition: all 0.3s ease 0s
  .tooltip 
    line-height 1.5
    color #ffffff
    font-weight 400
    background-color #000000
    padding .5em
    // text-shadow #f5f5f5 0 1px 0
    white-space nowrap
    border-radius 4px
    opacity 0.8
    position absolute
